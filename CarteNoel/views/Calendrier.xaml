            <!-- MODELE : Image + Numéro du jour en dessous -->
            <!-- Tous les boutons suivent la même structure -->

            <!-- 1 -->
            <Button Style="{StaticResource CarteStyle}" Tag="1" Click="Button_Click">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <Image Source="/Image/noel1.png" Width="50" Height="50"/>
