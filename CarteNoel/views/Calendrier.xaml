        <Grid Name="MessageOverlay"
              Background="#AA000000"
              Visibility="Collapsed"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Panel.ZIndex="999"          
              MouseDown="MessageOverlay_MouseDown">

            <Border x:Name="Mo"
            CornerRadius="15"
            Padding="20"
            Width="350"
            Height="350"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            RenderTransformOrigin="0.5,0.5">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#B71C1C" Offset="0"/>
                        <GradientStop Color="#2E7D32" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Border.RenderTransform>
                    <ScaleTransform x:Name="FlipScale" ScaleX="0"/>
                </Border.RenderTransform>

                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

                    <Image Name="PopupImage"
                   Width="180"
                   Height="180"
                   Margin="0,0,0,10"
                   Stretch="UniformToFill"/>

                    <TextBlock Name="MessageText"
                       Text="Phrase ici"
                       FontSize="20"
                       FontWeight="SemiBold"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Foreground="White"/>
                </StackPanel>

            </Border>

        </Grid>
        

