<UserControl x:Class="CarteNoel.views.Calendrier"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarteNoel.views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <UserControl.Resources>

        <!-- Fond festif -->
        <LinearGradientBrush x:Key="BackgroundNoel" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0B2C49" Offset="0"/>
            <GradientStop Color="#7B1F1F" Offset="1"/>
        </LinearGradientBrush>

        <!-- Style carte -->
        <Style x:Key="CarteStyle" TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Gold"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#B71C1C"/>
                        <GradientStop Color="#2E7D32" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Tag}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="28"
                                           FontWeight="Bold"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundNoel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>

        <!-- Zone titre + prénom + message + compte à rebours -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Titre + prénom -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,5">
                <!-- Titre -->
                <TextBlock FontSize="36"
                   FontWeight="Bold"
                   Foreground="Gold"
                   Text="🎄 Calendrier de l'Avent "
                   VerticalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="4" ShadowDepth="2" Color="DarkRed" Opacity="0.8"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- Prénom dynamique -->
                <TextBlock x:Name="UserNameText"
                   FontSize="36"
                   FontWeight="Bold"
                   Foreground="LightGreen"
                   VerticalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="4" ShadowDepth="2" Color="DarkGreen" Opacity="0.8"/>
                    </TextBlock.Effect>
                </TextBlock>
            </StackPanel>

            <!-- Message de bienvenue -->
            <TextBlock x:Name="WelcomeMessageText"
               FontSize="22"
               FontStyle="Italic"
               FontWeight="SemiBold"
               Foreground="LightGoldenrodYellow"
               HorizontalAlignment="Center"
               TextAlignment="Center"
               Margin="0,0,0,10">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="3" ShadowDepth="1" Color="Red" Opacity="0.7"/>
                </TextBlock.Effect>
            </TextBlock>

            <!-- Bulle compte à rebours -->
            <Border HorizontalAlignment="Center"
            Padding="20"
            CornerRadius="40"
            BorderThickness="3">

                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="Gold"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#33FFFFFF"/>
                        <GradientStop Color="#66B71C1C" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Border.Effect>
                    <DropShadowEffect BlurRadius="20"
                              ShadowDepth="0"
                              Color="Gold"
                              Opacity="0.9"/>
                </Border.Effect>

                <StackPanel HorizontalAlignment="Center">
                    <!-- Icônes festives -->
                    <TextBlock Text="❄️  🎄  🎁  🎄  ❄️"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,6">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="3" ShadowDepth="1" Color="LightBlue" Opacity="0.8"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <!-- Compte à rebours -->
                    <TextBlock x:Name="CountdownText"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="LightYellow"
                       HorizontalAlignment="Center"
                       TextAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="4" ShadowDepth="2" Color="DarkRed" Opacity="0.7"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>

            </Border>
        </StackPanel>

        <!-- 🎁 Cartes -->
        <UniformGrid Grid.Row="1" Rows="4" Columns="6" Margin="15">
            <Button Style="{StaticResource CarteStyle}" Tag="1" Click="Jour_Click"/>
            <Button Style="{StaticResource CarteStyle}" Tag="2" Click="Jour_Click"/>
            <Button Style="{StaticResource CarteStyle}" Tag="3" Click="Jour_Click"/>
            <Button Style="{StaticResource CarteStyle}" Tag="4" Click="Jour_Click"/>
            <Button Style="{StaticResource CarteStyle}" Tag="5" Click="Jour_Click"/>
            <Button Style="{StaticResource CarteStyle}" Tag="6" Click="Jour_Click"/>
            <Button Style="{StaticResource CarteStyle}" Tag="7" Click="Jour_Click"/>
            <Button Style="{StaticResource CarteStyle}" Tag="8" Click="Jour_Click"/>
            <Button Style="{StaticResource CarteStyle}" Tag="9" Click="Jour_Click"/>
            <Button Style="{StaticResource CarteStyle}" Tag="10" Click="Jour_Click"/>
            <Button Style="{StaticResource CarteStyle}" Tag="11" Click="Jour_Click"/>
            <Button Style="{StaticResource CarteStyle}" Tag="12" Click="Jour_Click"/>
            <Button Style="{StaticResource CarteStyle}" Tag="13" Click="Jour_Click"/>
            <Button Style="{StaticResource CarteStyle}" Tag="14" Click="Jour_Click"/>
            <Button Style="{StaticResource CarteStyle}" Tag="15" Click="Jour_Click"/>
            <Button Style="{StaticResource CarteStyle}" Tag="16" Click="Jour_Click"/>
            <Button Style="{StaticResource CarteStyle}" Tag="17" Click="Jour_Click"/>
            <Button Style="{StaticResource CarteStyle}" Tag="18" Click="Jour_Click"/>
            <Button Style="{StaticResource CarteStyle}" Tag="19" Click="Jour_Click"/>
            <Button Style="{StaticResource CarteStyle}" Tag="20" Click="Jour_Click"/>
            <Button Style="{StaticResource CarteStyle}" Tag="21" Click="Jour_Click"/>
            <Button Style="{StaticResource CarteStyle}" Tag="22" Click="Jour_Click"/>
            <Button Style="{StaticResource CarteStyle}" Tag="23" Click="Jour_Click"/>
            <Button Style="{StaticResource CarteStyle}" Tag="24" Click="Jour_Click"/>
        </UniformGrid>
    </Grid>
</UserControl>
