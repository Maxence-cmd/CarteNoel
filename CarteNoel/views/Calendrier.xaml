<UserControl x:Class="CarteNoel.views.Calendrier"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarteNoel.views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <UserControl.Resources>
        <!-- Exemple de style pour les cartes -->
        <Style x:Key="CarteStyle" TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="DarkRed"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Grid>
                            <Image Source="{Binding Image}" Stretch="UniformToFill" Opacity="0.7"/>
                            <TextBlock Text="{Binding Jour}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Compte à rebours -->
        <TextBlock x:Name="CountdownText" FontSize="24" FontWeight="Bold" 
                   Foreground="Gold" HorizontalAlignment="Center" Margin="10"/>

        <!-- Grille des cartes -->
        <UniformGrid Grid.Row="1" Rows="4" Columns="6" Margin="20">
            <!-- Chaque bouton représente une carte, ici exemple pour 24 jours -->
            <Button Style="{StaticResource CarteStyle}" Tag="1"/>
            <Button Style="{StaticResource CarteStyle}" Tag="2"/>
            <Button Style="{StaticResource CarteStyle}" Tag="3"/>
            <Button Style="{StaticResource CarteStyle}" Tag="4"/>
            <Button Style="{StaticResource CarteStyle}" Tag="5"/>
            <Button Style="{StaticResource CarteStyle}" Tag="6"/>
            <Button Style="{StaticResource CarteStyle}" Tag="7"/>
            <Button Style="{StaticResource CarteStyle}" Tag="8"/>
            <Button Style="{StaticResource CarteStyle}" Tag="9"/>
            <Button Style="{StaticResource CarteStyle}" Tag="10"/>
            <Button Style="{StaticResource CarteStyle}" Tag="11"/>
            <Button Style="{StaticResource CarteStyle}" Tag="12"/>
            <Button Style="{StaticResource CarteStyle}" Tag="13"/>
            <Button Style="{StaticResource CarteStyle}" Tag="14"/>
            <Button Style="{StaticResource CarteStyle}" Tag="15"/>
            <Button Style="{StaticResource CarteStyle}" Tag="16"/>
            <Button Style="{StaticResource CarteStyle}" Tag="17"/>
            <Button Style="{StaticResource CarteStyle}" Tag="18"/>
            <Button Style="{StaticResource CarteStyle}" Tag="19"/>
            <Button Style="{StaticResource CarteStyle}" Tag="20"/>
            <Button Style="{StaticResource CarteStyle}" Tag="21"/>
            <Button Style="{StaticResource CarteStyle}" Tag="22"/>
            <Button Style="{StaticResource CarteStyle}" Tag="23"/>
            <Button Style="{StaticResource CarteStyle}" Tag="24"/>
        </UniformGrid>
    </Grid>
</UserControl>
